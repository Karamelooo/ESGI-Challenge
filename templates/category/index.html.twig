{% extends 'base.html.twig' %}

{% block title %}Familles{% endblock %}

{% block body %}
    <h1>Familles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}">Voir</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune donnée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}">Nouveau</a>
    <a href="{{ path('app_tax_index') }}">Taxes</a>
    <a href="{{ path('app_services_index') }}">Services</a>
{% endblock %}
