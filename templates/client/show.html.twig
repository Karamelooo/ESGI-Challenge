{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Entreprise</th>
                <td>{{ client.company }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ client.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ client.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ client.phone }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ client.address }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ client.city }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ client.zipCode }}</td>
            </tr>
            <tr>
                <th>Siret</th>
                <td>{{ client.siret }}</td>
            </tr>
            <tr>
                <th>Naf</th>
                <td>{{ client.naf }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_client_index') }}">Retour à la liste</a>

    <a href="{{ path('app_client_edit', {'id': client.id}) }}">Editer</a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
