{% extends 'base.html.twig' %}

{% block title %}Formules{% endblock %}

{% block body %}
    <div class="flex-grow p-6">
        <div class="flex justify-between items-center mb-4">
            <div class="flex space-x-2"></div>
            <button class="bg-green-500 text-white px-4 py-2 rounded"><a href="{{ path('app_formule_new') }}">Nouvelle</a></button>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full border-collapse">
                <thead>
                <tr>
                    <th class="border-b p-4 text-left bg-gray-100">Prix</th>
                    <th class="border-b p-4 text-left bg-gray-100">Nom</th>
                    <th class="border-b p-4 text-left bg-gray-100">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for formule in formules %}
                    <tr class="even:bg-gray-50">
                    <td class="border-b p-4">{{ formule.price }}</td>
                    <td class="border-b p-4">{{ formule.name }}</td>
                    <td class="border-b p-4">
                        <a href="{{ path('app_formule_show', {'id': formule.id}) }}">Voir</a>
                        <a href="{{ path('app_formule_edit', {'id': formule.id}) }}">Modifier</a>
                    </td>
                {% else %}
                    <tr>
                        <td colspan="13">Pas de formules trouv√©es</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
