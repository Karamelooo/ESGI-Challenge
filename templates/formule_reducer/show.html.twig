{% extends 'base.html.twig' %}

{% block title %}Formule de réduction{% endblock %}

{% block body %}
    <h1>Formule de réduction</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Date de début</th>
                <td>{{ formule_reducer.startDate ? formule_reducer.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ formule_reducer.endDate ? formule_reducer.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Valeur</th>
                <td>{{ formule_reducer.value }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_formule_reducer_index') }}">Retour à la liste</a>

    <a href="{{ path('app_formule_reducer_edit', {'id': formule_reducer.id}) }}">Modifier</a>

    {{ include('formule_reducer/_delete_form.html.twig') }}
{% endblock %}
