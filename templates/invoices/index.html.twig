{% extends 'base.html.twig' %}

{% block title %}Invoices index{% endblock %}

{% block body %}
    <div class="container mx-auto px-4">
        <h1 class="text-3xl font-bold my-4 text-lime-600">Invoices index</h1>
        <div class="bg-white shadow-md rounded my-6">
            {% include 'components/table.html.twig' with {
                    rows: invoices,
                    invoiceId: 'id',
                } %}
        </div>
        <div class="flex space-x-4 mt-4">
            <a href="{{ path('app_invoices_new_devis') }}" class="bg-lime-600 hover:bg-lime-700 text-white font-bold py-2 px-4 rounded">
                Créer un nouveau devis
            </a>
            <a href="{{ path('app_invoices_new_facture') }}" class="bg-lime-600 hover:bg-lime-700 text-white font-bold py-2 px-4 rounded">
                Créer une nouvelle facture
            </a>
        </div>
    </div>
{% endblock %}
