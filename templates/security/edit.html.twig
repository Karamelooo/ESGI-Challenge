{% extends 'base.html.twig' %}

{% block title "Utilisateur : " ~ user.firstname %}

{% block body %}
    <div class="min-h-screen flex justify-center">
        <div class="bg-white p-16 rounded shadow-2xl w-full">`
            <a href="{{ path('app_user.show_all') }}" class="block w-auto mb-3 bg-green-600 hover:bg-green-500 p-4 rounded text-white hover:text-white transition duration-300"><--- Retour</a>

            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            <h2 class="text-3xl font-bold mb-10 text-gray-800">Utilisateur <span class="font-bold text-gray-500">{{ user.firstname ~ " " ~ user.lastname}}</span></h2>

            {{ form_errors(form) }}

            {{ form_start(form) }}
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block mb-1 font-bold text-gray-500'}})}}
                {{ form_widget(form.email, {'attr': {'class': 'w-full border-2 border-gray-200 p-3 rounded outline-none focus:border-purple-500'}})}}

                {{ form_label(form.firstname, 'Prénom', {'label_attr': {'class': 'block mb-1 font-bold text-gray-500'}})}}
                {{ form_widget(form.firstname, {'attr': {'class': 'w-full border-2 border-gray-200 p-3 rounded outline-none focus:border-purple-500'}})}}

                {{ form_label(form.lastname, 'Nom', {'label_attr': {'class': 'block mb-1 font-bold text-gray-500'}})}}
                {{ form_widget(form.lastname, {'attr': {'class': 'w-full border-2 border-gray-200 p-3 rounded outline-none focus:border-purple-500'}})}}

                {{ form_label(form.roles, 'Roles', {'label_attr': {'class': 'block mb-1 font-bold text-gray-500'}})}}
                {{ form_widget(form.roles, {'attr': {'class': 'w-full border-2 border-gray-200 p-3 rounded outline-none focus:border-purple-500'}})}}

                {{ form_label(form.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block mb-1 font-bold text-gray-500'}})}}
                {{ form_widget(form.plainPassword, {'attr': {'class': 'w-full border-2 border-gray-200 p-3 rounded outline-none focus:border-purple-500'}})}}

                <div class="mt-6">
                    <button type="submit" class="block w-full bg-green-500 hover:bg-green-300 p-4 rounded text-white hover:text-white transition duration-300">Créer un compte</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
        


{% endblock %}