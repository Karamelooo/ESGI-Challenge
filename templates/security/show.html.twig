{% extends 'base.html.twig' %}

{% block title "Utilisateur : " ~ user.firstname %}

{% block body %}
    <div class="min-h-screen flex justify-center">
        <div class="p-16 rounded shadow-2xl w-full">
            <a href="{{ path('app_user.show_all') }}" class="block w-auto mb-3 bg-green-600 hover:bg-green-500 p-4 rounded text-white hover:text-white transition duration-300"><--- Retour</a>

            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            <h2 class="text-3xl font-bold mb-10 text-gray-800">Fiche Utilisateur (admin)</h2>
            
            <div class="mt-6">
                <div>
                    <p class="block mb-1 font-bold text-gray-500">Pr√©nom : <span class="w-auto p-3 rounded outline-none">{{ user.firstname }}</span></p>
                    <p class="block mb-1 font-bold text-gray-500">Nom : <span class="w-auto p-3 rounded outline-none">{{ user.lastname }}</span></p>
                    <p class="block mb-1 font-bold text-gray-500">Email : <span class="w-auto p-3 rounded outline-none">{{ user.Email }}</span></p>
                </div>

                <div class="mt-6">
                    <a href="{{ path('app_user.edit', {id: user.id }) }}" class="block w-15 bg-green-500 hover:bg-green-300 p-4 rounded text-white hover:text-white transition duration-300">Editer</a>
                    <form action="{{ path('app_user.delete', {id: user.id }) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="block w-15 bg-red-500 hover:bg-red-300 p-4 rounded text-white hover:text-white transition duration-300"> Supprimer</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
    


{% endblock %}