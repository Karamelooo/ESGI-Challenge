{% extends 'base.html.twig' %}

{% block title "Utilisateurs" %}

{% block body %}

    <h1>Liste Utilisateurs (admin)</h1>

    <br>

    <table class="table-auto">
        <thead>
            <tr>
                <th>Utilisateur</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>
                    <p>{{user.lastname ~ " " ~ user.firstname ~ " - " ~ user.Email }}</p>
                </td>
                <td>
                    {% for role in user.roles %}
                    <p>{{role}}</p>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_user.show', {id: user.id}) }}" class="text-sky-400">Inspecter</a>
                </td>
                <td>
                    <a href="{{ path('app_user.edit', {id: user.id }) }}" class="text-green-600">Editer</a>
                </td>
                <td>
                    <form action="{{ path('app_user.delete', {id: user.id }) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="text-red-400">Supprimer</button>
                    </form>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}