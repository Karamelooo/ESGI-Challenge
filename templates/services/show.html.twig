{% extends 'base.html.twig' %}

{% block title %}Services{% endblock %}

{% block body %}
    <h1>Services</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ service.name }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ service.category }}</td>
            </tr>
            <tr>
                <th>Selling_price</th>
                <td>{{ service.sellingPrice }}</td>
            </tr>
            <tr>
                <th>Purchase_price</th>
                <td>{{ service.purchasePrice }}</td>
            </tr>
            <tr>
                <th>Tax</th>
                <td>{{ service.tax }}</td>
            </tr>
            <tr>
                <th>Last_update</th>
                <td>{{ service.lastUpdate ? service.lastUpdate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_services_index') }}">back to list</a>

    <a href="{{ path('app_services_edit', {'id': service.id}) }}">edit</a>

    {{ include('services/_delete_form.html.twig') }}
{% endblock %}
